extend jade.resources/layout/master

block content
	.container.wrapper
		.category-page
			.category-banner
				//- a(href='#')
				//- 	img(src='http://placehold.it/1500x300/FAFAFA/000000')
			include jade.resources/partials/breadcrumbs.jade
			h1.block-header.category-header Bibliorafturi
			.aside-category.filter-vertical
				p.block-header.filter-header Filtreaza
				ul.filter-list
					//- li.filter-item.manufacturer
					//- 	p.filter-title Producator
					//- 	ul
					//- 		for brand in brands.brands
					//- 			li
					//- 				a(href='#') #{brand}
					li.filter-item.brands
						p.filter-title Producator
						ul
							for brand in brands.brands
								li
									a(href='#') #{brand}
					li.filter-item.colors
						p.filter-title Culori
						ul
							for color in colors.colors
								li
									a(href='#' style='background-color:#{color}')
					li.filter-item.summerwear
						p.filter-title Producator
						ul
							for brand in brands.brands
								li
									a(href='#') #{brand}
					li
						a(href="#" class='cancel-filters') Anuleaza filtrele
			.main
				.sort-block
					p 30 Produse
					.view
						p Vezi
						a(href='#' class='active') 50
						a(href='#') Toate
					.pagination
						ul
							li.active
								a(href='#') 1
							li
								a(href='#') 2
							li
								a(href='#') 3
							li
								a(href='#') 4
							li
								a(href='#') Urmatoarea pagina
					.sort
						select(class='form-control')
							each sortItem, i in sort.sort
								option(value=i) #{sortItem}
